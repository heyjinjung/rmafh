{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "backend: pytest (docker)",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"exec",
				"-T",
				"api",
				"pytest",
				"-vv",
				"-ra",
				"--maxfail=1"
			],
			"isBackground": false
		},
		{
			"label": "frontend: lint",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"Set-Location frontend; npm -s run lint"
			],
			"isBackground": false,
			"problemMatcher": []
		}
	]
}